<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.uai.anif.khafiz97.calculatorsederhana.MainActivity">

    <include
        layout="@layout/calc_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="C"
                android:textColor="@color/colorFuncText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_small_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="( )"
                android:textColor="@color/colorFuncText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="%"
                android:textColor="@color/colorFuncText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="Del"
                android:textColor="@color/colorFuncText"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="7"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="8"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="9"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncText"
                android:minHeight="80dp"
                android:text="X"
                android:textColor="@color/colorFuncBtnBackground"
                android:textSize="30dp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="4"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="5"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="6"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncText"
                android:minHeight="80dp"
                android:text="-"
                android:textColor="@color/colorFuncBtnBackground"
                android:textSize="30dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="1"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="2"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="3"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncText"
                android:minHeight="80dp"
                android:text="+"
                android:textColor="@color/colorFuncBtnBackground"
                android:textSize="30dp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="."
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorNumBtnBackground"
                android:minHeight="80dp"
                android:text="0"
                android:textColor="@color/colorNumBtnText"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#666"
                android:minHeight="80dp"
                android:text="="
                android:textColor="#fff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncText"
                android:minHeight="80dp"
                android:text="/"
                android:textColor="@color/colorFuncBtnBackground"
                android:textSize="30dp"  />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
